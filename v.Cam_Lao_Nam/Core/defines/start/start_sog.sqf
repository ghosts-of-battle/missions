MMF_music_player={

	MMF_radio_handle=_this spawn {
		_this setVariable ["play_veh_radio", true];
		waitUntil {sleep 1;
			if !(_this getVariable ["play_veh_radio", false]) then {true} else {
				private _track= selectRandom (_this getVariable ["MMF_radio_default", MMF_news]);
				private _duration = (configProperties [configFile >> "CfgMusic" >> _track] select 1) call BIS_fnc_GetCfgData;
				playMusic _track;
				sleep _duration;
				false
			};
		};
	};
};

mmf_sit_down= {		params ["_obj", "_caller"];

	_caller setVariable ["MMF_sit", true];

	_this call {
		{
			private _arr= _this;
			reverse _arr;
			_x disableCollisionWith (_arr select _forEachIndex)
		} forEach _this
	};

	_caller switchmove selectRandom ["HubSittingChairB_idle1"];
	_caller disableAI "ALL";

	_caller setPosASL [
				getPosASL _obj select 0,
				getPosASL _obj select 1,
				(getPosASL _obj select 2)- 0.5
			];

	if ((toLower(str _obj) find "plastic") >= 0) then {
		_caller setDir (getDir _obj +90)
	} else {
		if ((toLower(str _obj) find "arm") >= 0) then {
			_caller setDir (getDir _obj)
		} else {
			_caller setDir (getDir _obj +180)
		}
	}
};


