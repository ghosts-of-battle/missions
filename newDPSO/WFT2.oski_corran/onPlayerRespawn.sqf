// MOVING A BIT THE PLAYER (TO AVOID HE SPAWNS ON THE TENT WHEN CHOOSING TO RESPAWN AT MOBILE COMPOUND)
////////////////////////////////////////////////////////////////////////////////
player setPos [(getPos player select 0) + random 2, (getPos player select 1) + random 2, (getPos player select 2)];

